#include <hns_device_driver/HNSDeviceDriver.h>

using namespace hns_device_driver;
using namespace ros;

int main(int argc, char **argv){
	init(argc, argv, "hns_device_driver_node");
	std::string port("/dev/ttyACM0");
	unsigned long baudrate = 9600;
	uint32_t timeout = 1000;
	//serial::Serial my_serial(port, baudrate, serial::Timeout::simpleTimeout(timeout));
	HNSDeviceDriver hns_device_driver(port, baudrate, serial::Timeout::simpleTimeout(timeout));
	ros::spin();
	return 0;
}
